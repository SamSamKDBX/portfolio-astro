---
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

const pageTitle = "À propos de moi";

const identity = {
    firstName: "Samuel",
    country: "France",
    occupation: "alternant développeur informatique",
    hobbies: [
        "écriture",
        "lecture",
        "Jeux vidéo",
        "basketball",
        "dévloppement informatique",
    ],
};

const skills = [
    "C#",
    "Java",
    "HTML",
    "CSS",
    "JavaScript",
    "Astro",
    "Rédaction de documentation",
];

const happy = true;
const finished = false;
const goal = 4;

const skillColor = "crimson";
const fontWeight = "bold";
const textCase = "uppercase";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/logo.jpg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
        <style define:vars={{ skillColor, fontWeight, textCase }}>
            h2 {
                color: purple;
                font-size: 4rem;
            }
            .skill {
                color: var(--skillColor);
                font-weight: var(--fontWeight);
                text-transform: var(--textCase);
            }
        </style>
    </head>
    <body>
        <Navigation />

        <h2>{pageTitle}</h2>
        <h2>... et de mon nouveau site Astro !</h2>
        <p>Voici quelques faits me concernant :</p>
        <ul>
            <li>Je m'appelle {identity.firstName}.</li>
            <li>
                Je vis en {identity.country} et je travaille en tant que {
                    identity.occupation
                }.
            </li>
            {
                identity.hobbies.length >= 2 && (
                    <li>
                        Deux de mes loisirs sont : {identity.hobbies[0]} et{" "}
                        {identity.hobbies[1]}
                    </li>
                )
            }
        </ul>
        <p>Voici mes compétences :</p>
        <ul>
            {skills.map((skill) => <li class="skill">{skill}</li>)}
        </ul>
        {happy && <p>Je suis heureux d'apprendre Astro !</p>}

        {finished && <p>J'ai terminé ce tutoriel !</p>}

        {
            goal === 4 ? (
                <p>Mon objectif est de terminer en 4 jours.</p>
            ) : (
                <p>Mon objectif n'est pas de 4 jours.</p>
            )
        }
        <Footer username="SamSamKDBX" />
    </body>
</html>
