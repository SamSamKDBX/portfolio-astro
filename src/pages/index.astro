      href="/posts/post-1"
      title="Title"
      subTitle="SubTitle"
      description="Description........................................................................................................................................................................................................................"
      hoverScale={1.02}
    >
      <img
        slot="right"
        src="/src/assets/default.webp"
        class="h-full w-full object-cover"
        alt=""
      />
    </PreviewSection>
    <!-- Section preview blog -->
    <PreviewSection
      href="/"
      title="Title"
      subTitle="SubTitle"
      description="..."
      hoverScale={1.02}
    >
      <Carrousel
        slot="right"
        items={[
          {
            src: "/src/assets/default.webp",
            title: "Article 1",
            subTitle: "Sous-titre 1",
